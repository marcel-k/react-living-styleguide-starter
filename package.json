{
  "name": "react-living-styleguide-starter",
  "description": "react & create-react-app & typescript & storybook & jest & react-testing-library & styled-components + atomic-design",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "analyze:storybook": "source-map-explorer 'build-storybook/*.bundle.js'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:storybook": "build-storybook -c .storybook -o build-storybook -s public",
    "test": "react-scripts test",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom=src/**/*.tsx --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.stories.tsx --collectCoverageFrom=!src/**/index.ts --collectCoverageFrom=!src/*.tsx --collectCoverageFrom=!src/*.ts --collectCoverageFrom=!src/@types/*.*",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "serve": "serve -s build",
    "serve:storybook": "serve -s build-storybook"
  },
  "dependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.1.3",
    "styled-normalize": "^8.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.1.0-alpha.27",
    "@storybook/addon-info": "^5.1.0-alpha.27",
    "@storybook/addon-knobs": "^5.1.0-alpha.27",
    "@storybook/addon-links": "^5.1.0-alpha.27",
    "@storybook/addon-storysource": "^5.0.8",
    "@storybook/addons": "^5.1.0-alpha.27",
    "@storybook/react": "^5.1.0-alpha.27",
    "@types/expect": "^1.20.4",
    "@types/jest": "24.0.0",
    "@types/node": "10.12.21",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-info": "^4.1.1",
    "@types/storybook__addon-knobs": "^4.0.4",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.12",
    "babel-loader": "^8.0.5",
    "jest-styled-components": "^6.3.1",
    "react-docgen-typescript-loader": "^3.0.1",
    "react-scripts": "2.1.8",
    "react-testing-library": "^6.1.2",
    "source-map-explorer": "^1.8.0",
    "typescript": "3.3.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
